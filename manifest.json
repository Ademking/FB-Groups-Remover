{
	"manifest_version" : 2,
	"name": "FB Group Manager",
	"description": "Manage Facebook Groups",
	"version": "0.1",
	"content_scripts": [
		{
			"matches" : [
				"<all_urls>"
			],
			"js": ["jquery.js","content.js"]
		}
	],
	"permissions": [
		"*://*.facebook.com/*",
		"storage",
		"tabs"
	  ],
  "background": {
    "scripts": ["jquery.js","background.js"]
  },
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "FB Arabic Font", 
		"default_popup": "popup.html" 
	},
	 "icons": { "16": "icons/16.png",
             "48": "icons/48.png",
            "128": "icons/128.png" }

}
